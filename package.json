{
  "name": "software-testing-assignment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "c8 mocha",
    "coverage": "c8 report --reporter=text --reporter=lcov",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "c8": {
    "all": true,
    "include": ["src/**/*.js"],
    "exclude": ["src/.internal/**/*.js"],
    "reporter": ["text", "text-summary", "lcov"],
    "check-coverage": true,
    "lines": 5,
    "branches": 10,
    "exclude-report-formats": ["functions"]
    },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "coveralls": "^3.1.1",
    "mocha": "^11.7.5"
  }
}
